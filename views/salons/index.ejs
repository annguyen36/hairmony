
<% layout('layouts/Boilerplate')%>
    <h1>All salons</h1>

    <div>
        <a href="/salons/new">New Salon</a>
    </div>
    <ul>
        <% for (let salon of salons) { %>
        <div class="card">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=salon.image%>" alt="">
                </div>
                <div class="col-mg-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= salon.name%>
                        </h5>
                        <p class="card-text">
                            <%= salon.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted"><%= salon.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/salons/<%= salon._id %>">View <%= salon.name %></a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>
    </ul>
