

<% layout('layouts/Boilerplate')%>
<div class="row">
    <h1 class="text-center">New Salon</h1>
<div class="col-6 offset-3">
    <form action="/salons/<%=salon._id%>?_method=PUT" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
            <label class="form-label" for="name">Name</label>
            <input class="form-control" type="text" id="name" name="salon[name]" value="<%= salon.name %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label"  for="location">location</label>
            <input class="form-control"  type="text" id="location" name="salon[location]" value="<%= salon.location %>" required>
        </div>
        <div class="mb-3">
            <label class="form-label"  for="image">Image URL</label>
            <input class="form-control"  type="text" id="image" name="salon[image]" value="<%= salon.image %>">
        </div>
        <div class="mb-3">
            <label class="form-label"  for="description">Description</label>
            <textarea class="form-control"  type="text" id="description" name="salon[description]" value="<%= salon.description %>" required></textarea>
           
        </div>
        <div class="mb-3">
            <button class="btn btn-info">Edit Salon</button>
        </div>
        
    </form>

    <a href="/salons/<%= salon._id %>"> Back to salon</a>

</div>
</div>
    
<script>
    (function () {
    'use strict'

    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.querySelectorAll('.validated-form')

    // Loop over them and prevent submission
    Array.prototype.slice.call(forms)
        .forEach(function (form) {
        form.addEventListener('submit', function (event) {
            if (!form.checkValidity()) {
            event.preventDefault()
            event.stopPropagation()
            }

            form.classList.add('was-validated')
        }, false)
        })
    })()
</script>